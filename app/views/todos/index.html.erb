<h1>Listing todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Deadline at</th>
      <th>Status</th>
      <th>Detail</th>
      <th>Priority</th>
      <th>Type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.start_at %></td>
        <td><%= todo.end_at %></td>
        <td><%= todo.deadline_at %></td>
        <td><%= todo.status %></td>
        <td><%= todo.detail %></td>
        <td><%= todo.priority %></td>
        <td><%= todo.type %></td>
        <td><%= todo.user_id %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
